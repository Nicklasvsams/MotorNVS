@using MotorNVS.BL.DTOs.CategoryDTO
@{
    @model List<CategoryResponse>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }

    <div class="createButton d-flex justify-content-around align-items-center">
        <h1>Categories</h1>

        <a href='@Url.Action("Create", "Category")'>
            <button>Create new entry</button>
        </a>
    </div>

    @if (@Model.Count != 0)
    {
        <div class="d-flex justify-content-around flex-row flex-wrap">
            @foreach (CategoryResponse category in @Model)
            {
                <div class="container info-card">
                    <div class="row info-id  align-items-center justify-content-around">
                        <div class="col-auto">
                            <p><b>Category ID: @category.Id</b></p>
                        </div>
                        <div class="col-auto">
                            @Html.ActionLink("Edit", "Edit", new { id = category.Id }, new {@class = "cardButton"})
                        </div>
                    </div>
                    <br />
                    <p>Category name: @category.CategoryName</p>
                    <br />
                </div>
            }
        </div>
    }
    else
    {
        <p>No data was found</p>

    }
}
